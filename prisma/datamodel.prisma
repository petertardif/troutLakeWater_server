type Owner {
  id: ID! @unique
  last_name: String!
  first_name: String!
  primary_email: String! @unique
  alt_email: String @unique
  password: String!
  perm_phone_number: String
  other_phone_number: String
  p_addresses: PermAddress
  updatedAt: DateTime! @updatedAt
}

type PermAddress {
  id: ID! @unique
  address: String!
  city: String!
  state: String!
  zip_code: String!
  createdBy: Owner
}

type Site {
  id: ID! @unique
  site_number: Int! @unique
  tl_road_side: String!
  tl_address: String!
  land_company: String!
  owners_association: String!
  trout_lake_water: Boolean!
  owners: [Owner!]!
  site_phone_number: String
}

type Bill {
  id: ID! @unique
  year: Int!
  payment: Payment
  payment_due: DateTime!
  site: Site
}

type Payment {
  id: ID! @unique
  paid: Boolean! @default(value: false)
  payment_type: String!
  date_paid: DateTime! @createdAt
  bills: [Bill!]!
}